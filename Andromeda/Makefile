# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=release
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Andromeda_config = debug

else ifeq ($(config),release)
  Andromeda_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := Andromeda

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Andromeda:
ifneq (,$(Andromeda_config))
	@echo "==== Building Andromeda ($(Andromeda_config)) ===="
	@${MAKE} --no-print-directory -C . -f Andromeda.make config=$(Andromeda_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Andromeda.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Andromeda"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"